<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:listSeparatorTextViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:orientation="vertical"
    android:padding="5dp"
    android:rowCount="1">

    <LinearLayout
        android:layout_column="0"
        android:layout_rowWeight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/filterEventTopText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.5"
            android:text="@string/filterActivityEvent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/filterEventBottomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.5"
            android:text="@string/filterActivityEventDescription" />
    </LinearLayout>

    <Switch
        android:id="@+id/filterEventSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_rowWeight="0.2" />

</GridLayout>